    {% for f in categorie %}
<div class="container">
    <div class="wrapper">
        <div class="span7">
            <div class="widget stacked widget-table action-table">

                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3>
                        <a href="{{ path('forums_listpage',{'id':f.id}) }}">
                            {{ f.nom }}
                        </a>
                    </h3>
                </div> <!-- /widget-header -->
                {% if lim != null %}
    {% for l in lim %}
        {% if  l.categorie.nom == f.nom   %}
                <div class="widget-content">

                    <table class="table table-striped table-bordered">
                        <tbody>
                        <tr>
                            <td>
                                {{ l.title }}
                                <p class="news-meta" align="right">
                                    <span>{{ l.dateAjoutQuestion|date }}</span>
                                    <a href="{{ path('forums_commentpage',{'id':l.idQuestion}) }}">
                                    <span> Détail</span>
                                    </a>
                                   {# <span><i class="ti-eye"></i> {{ l.singularViewCount }}</span>#}
                                </p>
                            </td>
                        </tr>
                        </tbody>
                    </table>

                </div> <!-- /widget-content -->
        {% endif %}
    {% endfor %}
                {% endif %}
            </div> <!-- /widget -->
        </div>
    </div>
</div>
    {% endfor %}




