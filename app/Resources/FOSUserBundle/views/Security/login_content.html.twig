{% trans_default_domain 'FOSUserBundle' %}

    {% for flashMessage in app.session.flashbag.get('error_login') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
        <br>
    {% endfor %}
    <div class="alert alert-danger" id="error_login" style="display: none;"></div>
    <br>
<form action="{{ path("fos_user_security_check") }}" id="loginForm_fos" method="post" role="form">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label for="username"><span class="fa fa-user"></span> {{ 'security.login.username'|trans }}</label><br>
        <input type="text" class="form-control" id="username" name="_username"  required="required"  placeholder="Enter Username"/>
    </div>
    <div class="form-group">
        <label for="password"><span class="fa fa-eye"></span> {{ 'security.login.password'|trans }}</label><br>
        <input type="password" class="form-control" id="password" name="_password" required="required"  placeholder="Enter password" />
    </div>
    <div class="form-check form-check-inline">
        <label class="form-check-label" for="remember_me">
            <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
        </label>
    </div>
    <button type="submit" class="btn btn-primary btn-block" id="_submit" name="_submit" style="background-color:#AE1B24;"><span class="fa fa-off"></span> {{ 'security.login.submit'|trans }}</button>
    <!--<input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />-->
</form>
